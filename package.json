{
  "name": "nest-react",
  "description": "Nest React Application inside a Turbo mono repository",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "start": "node apps/api/dist/main",
    "build": "turbo run build",
    "lint": "turbo lint",
    "format": "turbo format",
    "test": "turbo test",
    "m:crt": "turbo run m:crt --filter=@repo/api",
    "m:gen": "turbo run m:gen --filter=@repo/api",
    "m:run": "turbo run m:run --filter=@repo/api",
    "m:revert": "turbo run m:revert --filter=@repo/api"
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "turbo": "^1.12.2"
  }
}